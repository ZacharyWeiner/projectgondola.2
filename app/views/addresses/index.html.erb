<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street number</th>
      <th>Street name</th>
      <th>Unit</th>
      <th>Address type</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Full street address</th>
      <th>Map grid</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Company info</th>
      <th>Emergency contact</th>
      <th>Work order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_number %></td>
        <td><%= address.street_name %></td>
        <td><%= address.unit %></td>
        <td><%= address.address_type %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.zip %></td>
        <td><%= address.full_street_address %></td>
        <td><%= address.map_grid %></td>
        <td><%= address.latitude %></td>
        <td><%= address.longitude %></td>
        <td><%= address.company_info %></td>
        <td><%= address.emergency_contact %></td>
        <td><%= address.work_order %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

