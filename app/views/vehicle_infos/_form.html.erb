<%= simple_form_for(@vehicle_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :year %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :registration_state %>
    <%= f.input :color %>
    <%= f.input :plate %>
    <%= f.input :registration_id %>
    <%= f.input :registration_expiration %>
    <%= f.input :insurance_company %>
    <%= f.input :insurance_company %>
    <%= f.association :company_info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
